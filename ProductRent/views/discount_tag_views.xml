<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- ==================== -->
        <!-- discount Detail -->
        <!-- ==================== -->

        <!-- action -->
        <record id="action_discount_tag" model="ir.actions.act_window">
            <field name="name">Discount Tag</field>
            <field name="res_model">discount.tag</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new discount
                </p>
            </field>
        </record>

        <!-- product detail form view -->
        <record id="discount_tag_view_form" model="ir.ui.view">
            <field name="name">discount.tag.form</field>
            <field name="model">discount.tag</field>
            <field name="arch" type="xml">
                <form string="discountDetail">
                    <sheet>
                        <group string="discount Detail"/>
                        <group>
                            <field name="name"/>
                            <field name="percentage"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- product detail list view -->
        <record id="discount_tag_view_list" model="ir.ui.view">
            <field name="name">discount.tag.list</field>
            <field name="model">discount.tag</field>
            <field name="arch" type="xml">
                <list string="discountDetail">
                    <field name="name"/>
                    <field name="percentage"/>
                </list>
            </field>
        </record>


        <!-- menu -->
        <menuitem id="menu_configuration"
                  name="Configuration"
                  parent="menu_productrent_root"/>

        <menuitem id="menu_discount_tag"
                  name="Discount Tag"
                  parent="menu_configuration"
                  action="action_discount_tag"/>

    </data>

</odoo>